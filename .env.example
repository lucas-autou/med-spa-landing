# =====================================================
# Med Spa Virtual Assistant - Environment Variables
# =====================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# -----------------------------------------------------
# OpenAI Configuration
# -----------------------------------------------------
# Your OpenAI API key for GPT-4o-mini
OPENAI_API_KEY=sk-proj-xxxxxxxxxxxxxxxxxxxxx

# Model configuration (recommended: gpt-4o-mini for speed and cost)
OPENAI_MODEL=gpt-4o-mini

# Maximum tokens for responses (keep low for quick responses)
OPENAI_MAX_TOKENS=150

# Temperature for creativity (0.3 = focused, 0.7 = creative)
OPENAI_TEMPERATURE=0.3

# -----------------------------------------------------
# ElevenLabs Text-to-Speech
# -----------------------------------------------------
# Your ElevenLabs API key for voice synthesis
NEXT_PUBLIC_ELEVENLABS_API_KEY=xxxxxxxxxxxxxxxxxxxxx

# -----------------------------------------------------
# Stripe Payment Processing
# -----------------------------------------------------
# Secret key for server-side Stripe operations
STRIPE_SECRET_KEY=sk_live_xxxxxxxxxxxxxxxxxxxxx

# Webhook secret for validating Stripe webhooks
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxxx

# Price IDs from your Stripe dashboard
NEXT_PUBLIC_STRIPE_PRICE_FULL=price_xxxxxxxxxxxxxxxxxxxxx
NEXT_PUBLIC_STRIPE_PRICE_SUBSCRIPTION=price_xxxxxxxxxxxxxxxxxxxxx
NEXT_PUBLIC_STRIPE_PRICE_PILOT=price_xxxxxxxxxxxxxxxxxxxxx

# -----------------------------------------------------
# Supabase Database
# -----------------------------------------------------
# Your Supabase project URL
SUPABASE_URL=https://xxxxxxxxxxxxx.supabase.co

# Service role key (server-side only, never expose to client)
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.xxxxxxxxxxxxxxxxxxxxx

# -----------------------------------------------------
# Email Service (Resend)
# -----------------------------------------------------
# Your Resend API key for transactional emails
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxx

# -----------------------------------------------------
# Analytics & Tracking
# -----------------------------------------------------
# Facebook/Meta Pixel ID for conversion tracking
NEXT_PUBLIC_META_PIXEL_ID=xxxxxxxxxxxxxxxxxxxxx

# Google Analytics 4 Measurement ID
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# -----------------------------------------------------
# Application Configuration
# -----------------------------------------------------
# Your production URL (update after deploying to Vercel)
NEXT_PUBLIC_APP_URL=https://your-domain.vercel.app